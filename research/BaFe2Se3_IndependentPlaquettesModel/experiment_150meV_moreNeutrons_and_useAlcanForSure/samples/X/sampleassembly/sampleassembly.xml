<SampleAssembly name="X">

    <PowderSample name="X" type="sample">
        <Shape>
            <cylinder radius="10*mm" height="40*mm"/>
        </Shape>
        <Phase type="crystal">
            <ChemicalFormula>Fe</ChemicalFormula>
            <xyzfile>X.xyz</xyzfile>
        </Phase>
    </PowderSample>

    <PowderSample name="Al" type="sample">
	<Shape>
	    <hollowCylinder in_radius="10.5*mm" out_radius="11.5*mm" height="40*mm"/>
	</Shape>
	<Phase type="crystal">
	    <ChemicalFormula>Al</ChemicalFormula>
	    <xyzfile>Al.xyz</xyzfile>
	</Phase>
    </PowderSample>
    
    <LocalGeometer registry-coordinate-system="InstrumentScientist">
        <Register name="X" position="(0,0,0)" orientation="(0,0,0)"/>
	<Register name="Al" position="(0,0,0)" orientation="(0,0,0)"/>
    </LocalGeometer>

</SampleAssembly>
